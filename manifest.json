{
  "name": "PlainClothes",
  "version": "1.0",
  "description": "Unstyle the web",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["tabs"],
  "background_page": "background.html",
  "options_page": "options.html",
  "page_action": {
    "default_icon": "icon-enabled.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*"],
      "js": ["plainclothes.js"]
    }
  ]
}